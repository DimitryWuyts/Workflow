{% extends 'base.html.twig' %}

{% block title %}Hello TicketPostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <br>
    <h2>Table for displaying level 0 tickets:</h2>

 <table>
     <tr>
         <th>Ticket Date |</th>
         <th>| Ticket Id |</th>
         <th>Ticket Title |</th>
         <th>Ticket Counter |</th>
         <th>Ticket Priority |</th>


         <hr>
     <tr>
         {% for post in posts %}
         <td>{{ post.date |date("m/d/Y") }} </td>
         <td>{{ post.id }} </td>
         <td>{{ post.TicketTitle }}</td>
         <td>{{ post.counter }}</td>
         <td>{{ post.prioritylevel }} </td>

     </tr>
     {% endfor %}

 </table>

</div>
{% endblock %}
